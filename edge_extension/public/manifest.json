{
  "short_name": "Thai news matcher",
  "name": "Thai news matcher",
  "description": "",
  "version": "1.0.0",
  
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "logo512.png",
    "default_popup": "index.html",
    "default_title": "Thai news matcher"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval' https://connect.facebook.net/en_US/sdk.js; object-src 'self';",
  "optional_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [{
    "js": ["https://connect.facebook.net/en_US/sdk.js"],
    "match": [
      "http://*/*",
      "https://*/*"]
  }],

  "permission": [
    "tabs"
  ]
}
